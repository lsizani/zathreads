<div class="row">
  <nav class="top-bar column" data-topbar>
    <div class="top-bar">
      <div class="top-bar-left">
        <ul class="menu">
          <li class="menu-text"><%= link_to 'ZA Threads', root_path %></li>
          <% if signed_in? %>
              <li>
                <%= link_to cart_path do %>
                    <i class="fi-shopping-cart"></i>
                    My Cart
                    (<span class="cart-count"><%= current_user.cart_count %></span>)
                <% end %>
              </li>
              <li>
                <%= link_to current_user.name, edit_user_registration_path %>
              </li>
              <% if current_user.admin? %>
                  <li><%= link_to 'Manage Designers', designers_path %></li>
              <% end %>


              <% if current_user.is_designer and current_user.designer_approved? %>
                  <li> <%= link_to 'Edit Profile', edit_designer_path(current_user.id) %></li>
                  <li> <%= link_to 'Manage My Products', :controller => 'products', :action => 'index', :id => current_user.id %>
                  </li>
              <% end %>
              <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %> </li>
          <% else %>
              <li><%= link_to 'Register', new_user_registration_path %></li>
              <li> <%= link_to 'Login', new_user_session_path %></li>
          <% end %>
        </ul>
      </div>
      <ul class="menu">
        <div class="top-bar-right">
          <ul class="menu">
            <li><%= link_to 'Designers', designers_path %></li>
            <li><%= link_to 'Products', products_path %></li>
          </ul>
        </div>
      </ul>
    </div>
  </nav>
</div>